{
  "$schema": "http://schemas.wp.org/trunk/theme.json",
  "version": 2,
  "settings": {
    "layout": {
      "contentSize": "800px",
      "wideSize": "1183px"
    },
    "color": {
      "palette": [
        {
          "slug": "my-custom-black",
          "color": "#484848",
          "name": "Custom-Black"
        },
        {
          "slug": "my-custom-gray",
          "color": "#8B8B8B",
          "name": "Custom-Gray"
        },
        {
          "slug": "my-custom-white",
          "color": "#F7F7F7",
          "name": "Custom-white"
        }
      ]
    },
    "typography": {
      "fontFamilies": [
        {
          "fontFamily": "'Inter', sans-serif",
          "slug": "inter",
          "name": "Body - Inter",
          "fontFace": [
            {
              "fontFamily": "'Inter', sans-serif",
              "fontWeight": "300",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:../assets/fonts/inter/static/Inter-Light.ttf"]
            },
            {
              "fontFamily": "'Inter', sans-serif",
              "fontWeight": "400",
              "fontStyle": "normal",
              "fontStretch": "normal",
              "src": ["file:../assets/fonts/inter/static/Inter-Regular.ttf"]
            }
          ]
        }
      ]
    },
    "spacing": {
      "padding": true,
      "margin": true,
      "units": ["px", "em", "rem", "vh", "vw", "%"]
    },
    "border": {
      "radius": true,
      "color": true,
      "style": true,
      "width": true
    }
  },
  "styles": {
    "color": {
      "background": "var(--wp--preset--color--my-custom-white)",
      "text": "var(--wp--preset--color--my-custom-black)"
    },
    "typography": {
      "fontFamily": "var(--wp--preset--font-family--inter)",
      "lineHeight": "1.75",
      "fontSize": "1rem"
    },
    "blocks": {
      "core/button": {
        "border": {
          "color": "currentColor",
          "radius": "0"
        },
        "color": {
          "background": "var(--wp--preset--color--my-custom-black)",
          "text": "var(--wp--preset--color--my-custom-white)"
        },
        "spacing": {
          "padding": {
            "top": "0.7em",
            "right": "1.7em",
            "bottom": "0.7em",
            "left": "1.7em"
          }
        }
      }
    }
  },
  "templateParts": [
    {
      "name": "header",
      "area": "header",
      "title": "Header"
    },
    {
      "name": "footer",
      "area": "footer",
      "title": "Footer"
    }
  ]
}
